@* Areas/Identity/Pages/Account/Manage/ChangePassword.cshtml - Updated with member styling *@
@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Alterar Palavra-passe";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="row mb-4">
    <div class="col-12">
        <h3 class="mb-0">
            <i class="fas fa-key me-2"></i>@ViewData["Title"]
        </h3>
        <p class="text-muted mb-0">Alterar a palavra-passe da sua conta</p>
    </div>
</div>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-8">
        <div class="book-interactions">
            <h6 class="mb-3">
                <i class="fas fa-lock me-2"></i>Segurança da Conta
            </h6>
            <form id="change-password-form" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Palavra-passe atual" />
                    <label asp-for="Input.OldPassword" class="form-label">
                        <i class="fas fa-unlock me-1"></i>Palavra-passe Atual
                    </label>
                    <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Nova palavra-passe" />
                    <label asp-for="Input.NewPassword" class="form-label">
                        <i class="fas fa-key me-1"></i>Nova Palavra-passe
                    </label>
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirmar nova palavra-passe" />
                    <label asp-for="Input.ConfirmPassword" class="form-label">
                        <i class="fas fa-check me-1"></i>Confirmar Nova Palavra-passe
                    </label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save me-2"></i>Atualizar Palavra-passe
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="col-md-4">
        <div class="book-interactions">
            <h6 class="mb-3">
                <i class="fas fa-shield-alt me-2"></i>Dicas de Segurança
            </h6>
            <div class="can-evaluate">
                <small>
                    <i class="fas fa-check-circle me-1"></i>
                    <strong>Palavra-passe Forte:</strong><br>
