@* Areas/Identity/Pages/Account/Manage/_StatusMessage.cshtml - Updated with member styling *@
@model string

@if (!String.IsNullOrEmpty(Model))
{
    var statusMessageClass = Model.StartsWith("Error") ? "danger" : "success";
    <div class="alert alert-@statusMessageClass alert-dismissible member-card" role="alert">
        <i class="fas @(statusMessageClass == "success" ? "fa-check-circle" : "fa-exclamation-triangle") me-2"></i>
        @Model
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
    </div>
}
