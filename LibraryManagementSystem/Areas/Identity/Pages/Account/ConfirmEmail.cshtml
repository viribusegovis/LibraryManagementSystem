@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirmar Email";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-dashboard.css" asp-append-version="true" />
}

<div class="container-fluid custom-width-container dashboard-container">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="dashboard-header text-center">
                <h1 class="h3 mb-0">
                    <i class="fas fa-envelope-open-text me-2"></i>@ViewData["Title"]
                </h1>
                <p class="mb-0">Confirmação da sua conta de biblioteca</p>
            </div>
        </div>
    </div>

    <!-- Confirmation Result -->
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card dashboard-card">
                <div class="card-header bg-success text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-check-circle me-2"></i>Email Confirmado com Sucesso!
                    </h6>
                </div>
                <div class="card-body card-content text-center">
                    <div class="mb-4">
                        <div class="card-icon bg-success-gradient mx-auto mb-3" style="width: 80px; height: 80px; font-size: 2.5rem;">
                            <i class="fas fa-user-check"></i>
                        </div>
                        <h5 class="text-success">Conta Ativada!</h5>
                        <p class="text-muted">O seu email foi confirmado e a sua conta está agora ativa.</p>
                    </div>

                    <div class="alert alert-success">
                        <h6 class="alert-heading">
                            <i class="fas fa-thumbs-up me-2"></i>Obrigado por confirmar o seu email!
                        </h6>
                        <p class="mb-0">
                            A sua conta de membro da biblioteca está agora totalmente ativa.
                            Pode fazer login e começar a explorar o nosso catálogo de livros.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Account Information -->
    <div class="row justify-content-center mt-4">
        <div class="col-lg-8 col-md-10">
            <div class="card dashboard-card">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-user-circle me-2"></i>Informações da Conta
                    </h6>
                </div>
                <div class="card-body card-content">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center">
                                <div class="card-icon bg-success-gradient me-3" style="width: 40px; height: 40px;">
                                    <i class="fas fa-check"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0">Email Verificado</h6>
                                    <small class="text-muted">A sua conta está confirmada</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center">
                                <div class="card-icon bg-primary-gradient me-3" style="width: 40px; height: 40px;">
                                    <i class="fas fa-id-card"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0">Membro Ativo</h6>
                                    <small class="text-muted">Acesso completo à biblioteca</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-light">
                        <small class="text-muted">
                            <i class="fas fa-info-circle me-1"></i>
                            <strong>Nota:</strong> Mantenha o seu email sempre atualizado para receber
                            notificações importantes sobre empréstimos e devoluções.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row justify-content-center mt-4">
        <div class="col-lg-8 col-md-10 text-center">
            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                <a asp-page="/Account/Login" class="btn btn-primary btn-lg me-md-2">
                    <i class="fas fa-sign-in-alt me-2"></i>Fazer Login
                </a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-home me-2"></i>Página Inicial
                </a>
            </div>

            <div class="mt-3">
                <small class="text-muted">
                    <i class="fas fa-shield-alt me-1"></i>
                    A sua conta está agora segura e verificada
                </small>
            </div>
        </div>
    </div>
</div>

<script src="~/js/register-validation.js" asp-append-version="true"></script>
    